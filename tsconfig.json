{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@assets": ["./public/assets"],
      "@assets/*": ["./public/assets/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@config": ["./config"],
      "@config/*": ["./config/*"],
      "@constants": ["./constants"],
      "@context": ["./context"],
      "@constants/*": ["./constants/*"],
      "@i18n": ["./i18n"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
      "@services": ["./services"],
      "@services/*": ["./services/*"],
      "@providers": ["./providers"],
      "@providers/*": ["./providers/*"],
      "@themes": ["./themes"],
      "@themes/*": ["./themes/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "i18n/index.js"]
}
